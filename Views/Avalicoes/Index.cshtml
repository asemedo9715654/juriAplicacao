@model IEnumerable<juriAplicacao.Models.Avalicao>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Avalicaoatribuida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Obs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Requisitos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Avalicaoatribuida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Obs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Requisitos.IdRequisitos)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAvalicao">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdAvalicao">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAvalicao">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
